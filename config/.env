# ===========================================
# Environment Variables - Production Grade
# ===========================================

# ===========================================
# OpenAI Configuration (REQUIRED)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Milvus Cloud / Zilliz (REQUIRED)
# Get these from https://cloud.zilliz.com
# ===========================================
MILVUS_URI=https://your-cluster.api.gcp-us-west1.zillizcloud.com
MILVUS_TOKEN=your_milvus_api_token_here

# Alternative names (both work)
# ZILLIZ_URI=
# ZILLIZ_TOKEN=

# ===========================================
# Web Search API Keys (Optional)
# ===========================================
SERPER_API_KEY=
TAVILY_API_KEY=

# ===========================================
# Application Settings
# ===========================================
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# Paths
# ===========================================
DATA_DIR=./data
RAW_DOCS_DIR=./data/raw
PROCESSED_DIR=./data/processed

# ===========================================
# OCR Configuration
# ===========================================
OCR_ENGINE=easyocr
OCR_GPU=false
OCR_LANGUAGES=en,hi

# ===========================================
# NLP Configuration
# ===========================================
SPACY_MODEL=en_core_web_sm

# ===========================================
# CrewAI Settings
# ===========================================
CREWAI_VERBOSE=true
CREWAI_MAX_ITER=5

# ===========================================
# Monitoring (Optional)
# ===========================================
PROMETHEUS_ENABLED=false
METRICS_PORT=9090
